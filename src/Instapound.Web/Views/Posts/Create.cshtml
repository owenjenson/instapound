@model Instapound.Web.Models.NewPostViewModel

@{
    ViewData["Title"] = "New post | Instapound";
}

<h2 class="text-3xl font-semibold mb-6">New post</h2>

<form class="flex flex-col gap-4 w-full" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="flex flex-col">
        <label asp-for="Text" class="mb-2"></label>
        <textarea asp-for="Text" class="input"></textarea>
        <span asp-validation-for="Text" class="text-danger"></span>
    </div>

    <div class="flex flex-col">
        <label asp-for="Image" class="mb-2"></label>

        <img id="image"
             class="self-start border border-outline rounded-lg max-h-[36rem] object-contain bg-surface-container mb-3"
             style="display: none" />

        <div class="flex gap-2">
            <button id="removeImageButton"
                    type="button"
                    class="btn"
                    style="display: none">
                Remove
            </button>
            <input id="newImageInput"
                   asp-for="Image"
                   class="rounded-lg text-on-surface-muted file:bg-primary file:text-on-primary file:rounded-lg file:py-0.5 file:mr-3"
                   type="file"
                   accept="image/*" />
        </div>

        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <div class="flex gap-3 mt-3">
        <button class="btn btn-primary" type="submit">Post</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/js/uploadImage.js" asp-append-version="true"></script>
}